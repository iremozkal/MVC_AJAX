@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!--Css Libraries-->
    <link href="~/Assets/Content/bootstrap.css" rel="stylesheet" />
    <!--Js Libraries-->
    <script src="~/Assets/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Assets/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Assets/Scripts/bootstrap.js"></script>
    <!---------------->
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="form-group">
        @using (Ajax.BeginForm("CustomerControl", "Customer", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "showMessage" }))
        {
            <input type="text" name="CustomerID" class="form-control" />
            <button type="submit" class="btn btn-primary">Login</button>
        }
    </div>
    <div class="form-group" id="showMessage"></div>
</body>
</html>
